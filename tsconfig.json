{
  "include": ["src", "*.d.ts"],
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "module": "ES2022",
    "outDir": "./dist",
    "target": "ES2021"
  }
}
